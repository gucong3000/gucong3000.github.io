* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	-o-box-sizing: border-box;
	-ms-box-sizing: border-box;
	-moz-box-sizing: border-box;
	-icab-box-sizing: border-box;
	-khtml-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	background: transparent url(about:blank) repeat fixed;
}
body,td,th,textarea {
	font-family: "Microsoft YaHei";
	font-size: 10pt;
}
h1,h2,h3,h4,h5,h6,th,td,caption {
	text-align: center;
}
h1 {
	font-size: 250%;
}
h2 {
	font-size: 225%;
}
h3 {
	font-size: 200%;
}
h4 {
	font-size: 175%;
}
h5 {
	font-size: 150%;
}
h6 {
	font-size: 125%;
}
hr {
	margin: 1em 0;
}
a:link {
	color: blue;
	text-decoration: none;
}
a:hover,a:focus {
	color: red;
	text-decoration: underline;
}
img {
	max-width: 100%;
	border-style: none;
	-ms-interpolation-mode: bicubic;
}
table {
	width: 100%;
	empty-cells: show;
	border-collapse: collapse;
}
caption {
	font-size: large;
	font-weight: bold;
}
th {
	word-break: keep-all;
	white-space: nowrap;
}
table,th,td {
	border: 1px solid gray;
}
ol,ul {
	width: 100%;
	overflow: hidden;
	white-space: nowrap;
	word-break: keep-all;
	text-overflow: ellipsis;
}
li {
	position: relative;
	border-top: 1px dashed gray;
	list-style-position: inside;
}
li:first-child {
	border-style: none;
}
li:nth-of-type(2n+1),tr:nth-of-type(2n+1) {
	background-color: rgba(0,0,0,0.06);
}
ul li {
	list-style-type: circle;
}
textarea {
	resize: vertical;
}
textarea,iframe {
	height: 100%;
	width: 100%;
}
iframe {
	border: none;
	background-color: transparent;
}
code {
	display: block;
	overflow: auto;
	white-space: pre;
	font-family: "Courier New", Courier, monospace;
}
code ol {
	padding-left: 4em;
	background-color: rgba(0,0,0,0.06);
}
code ol li{
	border: none;
	list-style-position: outside;
}
li:nth-of-type(2n),tr:nth-of-type(2n) {
	background-color: rgba(255,255,255,0.8);
}
/*form表单控件*/
form p {
	margin: 1em 0;
	text-align: center;
}
textarea,button,
input[type=text],input[type=password],
input[type=button],input[type=submit],input[type=reset] {
	outline: none;
	border: 1px dashed gray;
	box-shadow: 0 3px 3px rgba(0,0,0,.2);
	-0-box-shadow: 0 3px 3px rgba(0,0,0,.2);
	-moz-box-shadow: 0 3px 3px rgba(0,0,0,.2);
	-webkit-box-shadow: 0 3px 3px rgba(0,0,0,.2);
}
button,input[type=button],input[type=submit],input[type=reset] {
	color: black;
	background-color: white;
	background: -webkit-gradient(linear, left top, left bottom, from(rgba(0,0,0,0)), to(rgba(0,0,0,0.15)));
	background: -moz-linear-gradient(top, rgba(0,0,0,0), rgba(0,0,0,0.15));
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#cccccc');
	outline: none;
	cursor: pointer;
	text-decoration: none;
	padding: 0em 0.5em;
	text-shadow: 0 1px 1px rgba(0,0,0,.3);
	-webkit-border-radius: 0.5em;
	-moz-border-radius: 0.5em;
	border-radius: 0.5em;
	border-style: solid;
}
button:hover,button:active,
input[type=reset]:hover,input[type=reset]:active,
input[type=submit]:hover,input[type=submit]:active,
input[type=button]:hover,input[type=button]:active {
	color: black;
	text-decoration: none;
	background-color: rgba(0,0,0,0.15);
	background: -webkit-gradient(linear, left top, left bottom, from(rgba(0,0,0,0.15)), to(rgba(0,0,0,0)));
	background: -moz-linear-gradient(top, rgba(0,0,0,0.15), rgba(0,0,0,0));
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#cccccc', endColorstr='#ffffff');
}
button:active,input[type=button]:active,input[type=submit]:active,input[type=reset]:active {
	top: 1px;
	left: 1px;
	position: relative;
}

input[type=text],input[type=password] {
	width: 10em;
	border: 1px dashed gray;
}
textarea,.textbox {
	border: 1px dashed gray;
}
input[type=text]:focus,input[type=password]:focus {
	outline: none;
	border-style: solid;
}
/*HTML5标签*/
datalist {
	display: none;
}
details {
	display: block;
	margin: 1em 0px;
	padding-left: 40px;
}
meter,progress {
	width: 5em;
	height: 1em;
	display: inline-block;
	vertical-align: -0.2em;
}
progress {
	width: 10em;
}
aside,figcaption,footer,header,hgroup,summary,section,nav,article {
	margin: 1em 0;
	display: block;
}
figure {
	margin: 1em 40px; display: block;
}
mark {
	background: yellow;
}